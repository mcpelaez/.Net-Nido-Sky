@model reservsoft.Models.Reservas

@{
    ViewData["Title"] = "Eliminar Reserva";
}

<div class="create-form">
    <h1>@ViewData["Title"]</h1>

    <h3>¿Está seguro de que desea eliminar esta reserva?</h3>
    <div>
        <h4>Detalles de la Reserva</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NumReserva)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumReserva)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cliente)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Apellido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Apellido)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TipoDoc)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoDoc)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NumDoc)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumDoc)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Acompanantes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Acompanantes)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaReserva)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaReserva)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FInicio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FInicio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FFin)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FFin)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalReserva)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalReserva)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="NumReserva" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </form>
    </div>
</div>
