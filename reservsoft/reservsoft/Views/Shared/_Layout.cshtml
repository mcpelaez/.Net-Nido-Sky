<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - reservsoft</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/reservsoft.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.bootstrap5.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
   
    <style>
        /* Navbar y Footer */
        .navbar, footer {
            background-color: #2c2c2c; /* Color base oscuro */
            height: 60px; /* Altura ajustada para que coincida con el navbar */
        }

            .navbar-brand,
            .navbar-nav .nav-link,
            footer a {
                color: #f0f0f0 !important; /* Gris claro para texto */
            }

                .navbar-nav .nav-link:hover,
                footer a:hover {
                    color: #f5a623 !important; /* Acento en color dorado en el hover */
                }

        footer {
            color: #f0f0f0;
            background-color: #2c2c2c; /* Color oscuro para el fondo */
            padding: 0; /* Eliminar padding para que coincida con la altura */
            font-size: 1rem; /* Tamaño de texto más pequeño */
            position: fixed; /* Posición fija */
            left: 0;
            bottom: 0;
            width: 100%; /* Ocupa todo el ancho */
            z-index: 1000; /* Asegura que esté encima de otros elementos */
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            footer .social-icons a {
                margin-right: 15px;
                font-size: 20px; /* Reducido tamaño de los iconos */
                color: orange;
                transition: color 0.3s ease;
            }

                footer .social-icons a:hover {
                    color: #f5a623; /* Color dorado para el hover */
                }

            footer .container {
                width: 100%;
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 0 20px; /* Espaciado interior */
            }

        /* Espaciado entre el contenido y el footer */
        .container {
            padding-bottom: 70px; /* Ajustado el espaciado inferior */
        }
        /* Estilos para formularios de creación, edición y detalles */
.create-form {
    background-color: #f0f0f0;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    max-width: 800px;
    margin: 0 auto;
    width: 90%;
}

    .create-form .form-control {
        background-color: #fff;
        color: #333;
        border: 1px solid #ccc;
    }

    .create-form .form-label {
        color: #333;
    }

    .create-form h1, .create-form h4 {
        color: #2c2c2c;
        text-align: center;
    }

    /* Centrar el contenido del formulario */
    .create-form .row {
        justify-content: center;
    }

    .create-form .col-md-4,
    .create-form .col-md-6,
    .create-form .col-md-12 {
        width: 100%;
        max-width: 600px;
    }

    /* Ajustar el ancho de los campos del formulario */
    .create-form .form-group {
        margin-bottom: 20px;
    }

    .create-form .form-control {
        width: 100%;
    }

    /* Centrar los botones y enlaces */
    .create-form .btn-primary,
    .create-form a {
        display: block;
        width: 200px;
        margin: 20px auto 0;
        text-align: center;
    }

/* Estilo para el botón "Volver a la Lista" */
.btn-back {
    display: inline-block;
    padding: 10px 20px;
    background-color: #f0f0f0;
    color: #00a859;
    text-decoration: none;
    border: 2px solid #00a859;
    border-radius: 5px;
    transition: all 0.3s ease;
    font-weight: bold;
    margin-top: 20px;
}

    .btn-back:hover {
        background-color: #00a859;
        color: #fff;
    }

/* Estilos para Select2 */
.select2-container--default .select2-selection--multiple {
    background-color: #fff;
    border: 1px solid #ccc;
    border-radius: 5px;
}

    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        background-color: #00a859;
        color: #fff;
        border: none;
    }

    .select2-container--default .select2-selection--multiple .select2-selection_choice_remove {
        color: #fff;
    }

.select2-container--default .select2-results__option--highlighted[aria-selected] {
    background-color: #00a859;
}

/* Estilos para checkbox */
.form-check-input {
    margin-top: 0.3rem;
}

.form-check-label {
    margin-left: 0.5rem;
}

/* Estilos para las vistas de detalles */
.create-form dl.row {
    margin-bottom: 0;
}

.create-form dt {
    font-weight: bold;
    color: #333;
}

.create-form dd {
    margin-bottom: 10px;
}

.create-form .list-group {
    margin-top: 20px;
}

.create-form .list-group-item {
    background-color: #fff;
    color: #333;
    border-color: #ccc;
}

/* Estilos para el grupo de botones en las vistas de detalles */
.button-group {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 20px;
}

    .button-group .btn,
    .button-group .btn-back {
        width: auto;
        margin: 0;
    }

/* Estilos para los modales */
.modal-content {
    background-color: #f0f0f0;
    color: #333;
}
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door-fill"></i> reservsoft
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Inicio
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Reservas" asp-action="Index">
                                    <i class="bi bi-calendar2-check"></i> Reservas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Descuentoes" asp-action="Index">
                                    <i class="bi bi-percent"></i> Descuentos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Apartamentos" asp-action="Index">
                                    <i class="bi bi-building"></i> Apartamentos
                                </a>
                            </li>
                               
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link">
                                    <i class="bi bi-person-circle"></i> Hola, @User.Identity.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Registrarse
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
            <div>
                <span>&copy; reservsoft 2024</span>
            </div>
            <div class="mt-3 mt-md-0 social-icons">
                <span>Síguenos: </span>
                <a href="https://facebook.com" target="_blank">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="https://twitter.com" target="_blank">
                    <i class="bi bi-twitter"></i>
                </a>
                <a href="https://instagram.com" target="_blank">
                    <i class="bi bi-instagram"></i>
                </a>
                <a href="https://linkedin.com" target="_blank">
                    <i class="bi bi-linkedin"></i>
                </a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json'
                },
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'collection',
                        text: 'Exportar <i class="bi bi-caret-down-fill"></i>',
                        buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
                    }
                ]
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
