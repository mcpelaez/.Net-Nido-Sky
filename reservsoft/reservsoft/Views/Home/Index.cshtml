@{
    ViewData["Title"] = "Nido Sky - Reservaciones";
}

<style>
    :root {
        --primary-green: #00a859;
        --secondary-gray: #2c2c2c;
        --background-light: white;

    }

    body, html {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        overflow-x: hidden;

    }

    .carousel-container {
        position: relative;
        width: 100%;
        height: 500px;
        margin: 2rem auto;
        perspective: 1000px;
        overflow: hidden;
    }

    .carousel {
        position: absolute;
        width: 100%;
        height: 100%;
        transform-style: preserve-3d;
        transition: transform 1s;
    }

    .carousel-item {
        position: absolute;
        width: 80%;
        height: 100%;
        left: 10%;
        top: 0;
        background: var(--primary-green);
        color: white;
        text-align: center;
        transition: transform 1s, opacity 1s;
        opacity: 0.7;
        overflow: hidden;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.2);
    }

        .carousel-item.active {
            opacity: 1;
            z-index: 1;
        }

        .carousel-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .carousel-caption {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        text-align: center;
        padding: 1rem;
        transform: translateY(100%);
        transition: transform 0.5s ease-in-out;
    }

    .carousel-item.active .carousel-caption {
        transform: translateY(0);
    }

    .carousel-caption h2 {
        font-size: 1.8rem;
        margin-bottom: 0.5rem;
    }

    .carousel-caption p {
        font-size: 1.2rem;
    }

    .carousel-control {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        font-size: 2rem;
        color: white;
        background: rgba(0, 0, 0, 0.5);
        border: none;
        padding: 0.5rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
        z-index: 2;
    }

        .carousel-control:hover {
            background: rgba(0, 0, 0, 0.8);
        }

    .carousel-control-prev {
        left: 1rem;
    }

    .carousel-control-next {
        right: 1rem;
    }

    .carousel-indicators {
        position: absolute;
        bottom: 1rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 0.5rem;
        z-index: 2;
    }

    .carousel-indicator {
        width: 0.75rem;
        height: 0.75rem;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.5);
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .carousel-indicator.active {
            background: white;
        }
</style>

<div class="carousel-container">
    <div id="carousel" class="carousel">
        <div class="carousel-item active">
            <img src="~/Img/imagen-1.png" alt="Vista panorámica del hotel Nido Sky">
            <div class="carousel-caption">
                <h2>Bienvenido a Nido Sky</h2>
                <p>Lujo y comodidad en cada rincón</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Img/imagen-2.png" alt="Habitación de lujo del hotel Nido Sky">
            <div class="carousel-caption">
                <h2>Experiencia Inolvidable</h2>
                <p>Momentos únicos en nuestras lujosas instalaciones</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Img/imagen-3.png" alt="Vista espectacular desde el hotel Nido Sky">
            <div class="carousel-caption">
                <h2>Vistas Espectaculares</h2>
                <p>Paisajes impresionantes desde tu habitación</p>
            </div>
        </div>
    </div>

    <button class="carousel-control carousel-control-prev" onclick="moveSlide(-1)">&#10094;</button>
    <button class="carousel-control carousel-control-next" onclick="moveSlide(1)">&#10095;</button>

    <div class="carousel-indicators">
        <button class="carousel-indicator active" onclick="setSlide(0)"></button>
        <button class="carousel-indicator" onclick="setSlide(1)"></button>
        <button class="carousel-indicator" onclick="setSlide(2)"></button>
    </div>
</div>

@section Scripts {
    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll('.carousel-item');
        const indicators = document.querySelectorAll('.carousel-indicator');
        const carousel = document.getElementById('carousel');
        const totalSlides = slides.length;

        function showSlide(n) {
            slides[currentSlide].classList.remove('active');
            indicators[currentSlide].classList.remove('active');
            currentSlide = (n + totalSlides) % totalSlides;
            slides[currentSlide].classList.add('active');
            indicators[currentSlide].classList.add('active');
            updateCarousel();
        }

        function moveSlide(n) {
            showSlide(currentSlide + n);
        }

        function setSlide(n) {
            showSlide(n);
        }

        function updateCarousel() {
            for (let i = 0; i < totalSlides; i++) {
                const offset = (i - currentSlide + totalSlides) % totalSlides;
                const angle = offset * (360 / totalSlides);
                const zTranslate = offset === 0 ? 300 : 0;
                slides[i].style.transform = `rotateY(${angle}deg) translateZ(${zTranslate}px)`;
                slides[i].style.opacity = offset === 0 ? 1 : 0.7;
            }
        }

        function autoSlide() {
            moveSlide(1);
        }

        setInterval(autoSlide, 6000);

        // Inicializar el carrusel
        updateCarousel();
    </script>
}