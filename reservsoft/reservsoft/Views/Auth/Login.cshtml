@model reservsoft.Models.Usuario
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<link rel="stylesheet" href="../assets/css/styles.min.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />

<style>
    body {
        background-color: #e0e0e0;
        color: white;
        font-family: Arial, sans-serif;
    }

    .card {
        background-color: #2c2c2c;
        color: #fff;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .card-body h2 {
        text-align: center;
        margin-bottom: 10px;
        color: #00a859;
    }

    .btn-primary {
        padding: 8px 0;
        font-size: 14px;
        background-color: #00a859;
        border: none;
        border-radius: 5px;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #008746;
        }

    .form-control {
        background-color: #333;
        color: white;
        border: 1px solid #444;
        border-radius: 5px;
    }

    .form-label {
        color: white;
        margin-bottom: 5px;
    }

    .input-group-text {
        cursor: pointer;
    }

    .form-control:focus {
        outline: none;
        box-shadow: none;
    }

    .mt-3 {
        margin-top: 20px;
    }
</style>

<div class="d-flex align-items-center justify-content-center min-vh-120">
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <a href="~/img/nidosky.jpg" class="text-nowrap logo-img text-center d-block py-3 w-100">
                    <img src="@Url.Content("~/img/nidosky.jpg")" width="180" alt="Nido Sky" />
                </a>

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Correo electrónico</label>
                        <input asp-for="Email" class="form-control" type="email" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Contraseña</label>
                        <div class="input-group">
                            <input asp-for="Password" class="form-control" id="Password" type="password" required />
                            <span class="input-group-text" id="togglePassword">
                                <i class="bi bi-eye"></i>
                            </span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-2">Ingresar</button>
                </form>

                <p class="mt-3">
                    ¿No tienes cuenta? <a asp-action="Register" asp-controller="Auth">Regístrate aquí</a>
                </p>
            </div>
        </div>
    </div>
</div>

<script src="../assets/libs/jquery/dist/jquery.min.js"></script>
<script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Función para mostrar u ocultar la contraseña
    document.getElementById("togglePassword").addEventListener("click", function () {
        const passwordField = document.getElementById("Password");
        const type = passwordField.type === "password" ? "text" : "password";
        passwordField.type = type;
        this.querySelector("i").classList.toggle("bi-eye-slash");
    });

    // Mostrar una sola alerta con SweetAlert2
    @if (ViewBag.Error != null)
    {
        <text>
                Swal.fire({
                    icon: 'error',
                title: 'Error',
                text: '@ViewBag.Error',
                timer: 3000,
                showConfirmButton: false
                    });
        </text>
    }

    @if (ViewBag.Success != null)
    {
        <text>
                Swal.fire({
                    icon: 'success',
                title: '¡Bienvenido!',
                text: '@ViewBag.Success',
                timer: 3000,
                showConfirmButton: false
                    });
        </text>
    }
</script>
